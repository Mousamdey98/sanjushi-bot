{
  "version": 2,
  "env": {
    "LINE_CHANNEL_SECRET": "@line-channel-secret",
    "LINE_CHANNEL_ACCESS_TOKEN": "@line-channel-access-token",
    "DYNAMO_ACCESS_KEY_ID": "@dynamo-access-key-id",
    "DYNAMO_SECRET_ACCESS_KEY": "@dynamo-secret-access-key",
    "DYNAMO_TABLENAME": "line_bot"
  },
  "builds": [
    { "src": "webhook/index.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/", "dest": "404.html", "status": 404 }
  ],
  "regions": ["hnd1"],
  "alias": ["sanjushi-bot.honai.now.sh"]
}